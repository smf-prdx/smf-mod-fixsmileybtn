<?xml version="1.0" encoding="UTF-8"?>
<package-info xmlns="http://www.simplemachines.org/xml/package-info">
    <id>prdx:fixsmileybtn</id>
    <name>Fix Smiley's Close Button</name>
    <version>1.0.1</version>
    <type>modification</type>
    <install for="2.1.*">
        <readme lang="english" parsebbc="false" type="file">README.md</readme>
        <license type="file" parsebbc="false">LICENSE</license>
        <hook hook="integrate_pre_load" function="FixSmileyBtn::hooks#" file="$sourcedir/Class-FixSmileyBtn.php" />
        <require-file name="Sources/Class-FixSmileyBtn.php" destination="$sourcedir" />
        <require-file name="Themes/default/css/FixSmileyBtn.css" destination="$themedir/css" />
    </install>

    <uninstall for="2.1.*">
        <hook hook="integrate_pre_load" function="FixSmileyBtn::hooks#" file="$sourcedir/Class-FixSmileyBtn.php" reverse="true" />
        <remove-file name="$sourcedir/Class-FixSmileyBtn.php" />
        <remove-file name="$themedir/css/FixSmileyBtn.css" />
    </uninstall>
</package-info>
